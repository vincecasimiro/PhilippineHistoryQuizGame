<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:orientation="vertical"
    android:background="@drawable/bgapp"
    tools:context=".GameListActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="GAMES LIST"
        android:textColor="#ffffff"
        android:textSize="23sp"
        android:textStyle="bold|italic" />

    <Button
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/btnQuizBee"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="105dp"
        android:background="@drawable/bgpurple"
        android:gravity="center"
        android:text="QUIZ BEE"
        android:textColor="#000000"
        android:textSize="25sp" />

    <Button
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/btnLocateMe"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="97dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bgpink"
        android:gravity="center"
        android:text="LOCATE ME!"
        android:textColor="#000000"
        android:textSize="25sp" />

    <Button
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/btnFITB"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bgpurple"
        android:gravity="center"
        android:text="FILL IN THE BLANKS"
        android:textColor="#000000"
        android:textSize="25sp" />

    <Button
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/btnIdentifyMe"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="-238dp"
        android:background="@drawable/bgpink"
        android:gravity="center"
        android:text="IDENTIFY ME!"
        android:textColor="#000000"
        android:textSize="25sp" />

    <Button
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/btnMysteryRound"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="95dp"
        android:background="@drawable/bgpink"
        android:gravity="center"
        android:text="MYSTERY ROUND"
        android:textColor="#000000"
        android:textSize="25sp" />

    <Button
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/btnMainMenu"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/bgpink"
        android:gravity="center"
        android:text="MAIN MENU"
        android:textColor="#000000"
        android:textSize="25sp" />


</LinearLayout>